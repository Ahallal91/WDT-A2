@*
    Reference: MCBAExampleWithLogin Login.cshtml week 6
*@
@using Microsoft.AspNetCore.Http
@model Administrator
@{
    ViewData["Title"] = "Admin Login";
}

<div class="text-center">
    <h1 class="display-4">Admin Login</h1>
    <div class="row mt-5">
        <div class="col-md-4 offset-md-4">
            <form asp-action="GetLogin" asp-controller="Login">
                <div class="form-group text-left">
                    <label asp-for="AdminID" class="control-label"></label>
                    <input asp-for="AdminID" class="form-control" />
                    <span asp-validation-for="AdminID" class="text-danger"></span>
                </div>
                <div class="form-group text-left">
                    <label asp-for="AdminPW" for="Password" class="control-label">Password</label>
                    <input asp-for="AdminPW" type="password" class="form-control"
                           data-val="true" data-val-required="The Password field is required." />
                    @Html.ValidationMessage("Password", new { @class = "text-danger" })
                </div>
                <div class="form-group text-right">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-box-arrow-in-right"></i> Login</button>
                </div>
                @Html.ValidationMessage("LoginFailed", new { @class = "text-danger" })
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
