@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MCBA Online Banking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="mb-5">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar navbar-dark bg-dark">
            <div class="container">
                @{
                    var isLoggedIn = Context.Session.GetInt32(nameof(Customer.CustomerID)).HasValue;
                }
                @if (isLoggedIn)
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Customer" asp-action="Home">MCBA Online Banking</a>
                }
                else
                {
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MCBA Online Banking</a>
                }
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ml-auto">
                        @if (isLoggedIn)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-light">
                                    Welcome, @Context.Session.GetString(nameof(Customer.CustomerName))
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light center" asp-area="" asp-controller="Customer" asp-action="Home"><i class="bi bi-house-door-fill"></i> Home</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light center" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door-fill"></i> Home</a>
                            </li>
                        }
                        <li class="nav-item pr-3">
                            <a class="nav-link text-light center" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="bi bi-shield-lock-fill"></i> Privacy</a>
                        </li>
                        @if (isLoggedIn)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light btn btn-success" asp-controller="Login" asp-action="Logout"><i class="bi bi-box-arrow-in-left"></i> Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light  btn btn-primary" asp-area="Login" asp-controller="Login" asp-action="Login"><i class="bi bi-box-arrow-in-right"></i> Login</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - MCBA Online Banking - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
